<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/companionBrief_nameText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/adventurerCardNamePlaceholder"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/companionBrief_totalLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/adventurerCardLevelPlaceholder"
            app:layout_constraintStart_toEndOf="@+id/companionBrief_totalLevelLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/companionBrief_totalLevelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/adventurerCardLevelLabel"
            app:layout_constraintStart_toEndOf="@+id/companionBrief_nameText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/companionBrief_classLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adventurerCardClassLabel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/companionBrief_totalLevelLabel"
            app:layout_constraintTop_toBottomOf="@+id/companionBrief_totalLevelLabel" />

        <TextView
            android:id="@+id/companionBrief_classText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/adventurerCardClassPlaceholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/companionBrief_classLabel"
            app:layout_constraintTop_toBottomOf="@+id/companionBrief_totalLevel" />

        <ImageButton
            android:id="@+id/companionBrief_editCompanionButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/round_button"
            android:clickable="true"
            android:contentDescription="TODO"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_pencil_black_18dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>