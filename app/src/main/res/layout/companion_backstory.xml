<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/backgroundLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelAdventurerBackground"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/backgroundContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/traitsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelAdventurerPersonalityTraits"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/traitsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/idealsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelAdventurerIdeals"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idealsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/flawsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelAdventurerFlaws"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flawsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bondsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelAdventurerBonds"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bondsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>